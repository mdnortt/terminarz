{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.event_details'|trans({'%id%': event.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.event_details'|trans({'%id%': event.id|default('')}) }}</h1>
    {% if event is defined and event|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ event.id }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ event.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ event.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  event.title }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{  event.category.title }}</dd>
            <dt>{{ 'label.dueDate'|trans }}</dt>
            <dd>{{ event.dueDate|format_date('long') }}</dd>
        </dl>
        <p>
            <a href="{{ url('event_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}